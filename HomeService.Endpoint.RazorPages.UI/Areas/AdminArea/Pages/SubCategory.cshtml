@page
@model HomeService.Endpoint.RazorPages.UI.Areas.AdminArea.Pages.SubCategoryModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = " دسته بندی فرعی سوریس ها | آیدو";
    ViewData["Subcategory"] = " active open";
    ViewData["PageTitle"] = "دسته بندی فرعی";
}

<div class="card p-5">
    <div class="table-responsive text-nowrap">
        <a asp-page="AddSubCategory" class="btn btn-primary">افزودن</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>آیدی</th>
                    @* <th>عکس</th> *@
                    <th>نام سرویس</th>
                    <th>نام دسته بندی</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">

                @foreach (var category in Model.SubCategories)
                {
                    @if (category.IsDeleted == false)
                    {
                    <tr>
                        <td>
                            @category.Id
                        </td>
                        @* <td>

                    @*  <img src="@service.Image.ImageAddress" alt="@service.Image.Alt" class="rounded-circle"> *@

                        <td>@category.Name</td>
                        <td>@category.ServiceCategory.Name</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a asp-page="UpdateSubCategory" asp-route-id="@category.Id">
                                        <i class="bx bx-edit-alt me-1"></i>
                                        ویرایش
                                    </a>
                                    <a asp-page-handler="Delete" asp-route-id="@category.Id" onclick="return confirm('مطمئنی؟')">
                                        <i class="bx bx-trash me-1"></i> حذف
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
                }
            </tbody>
        </table>
    </div>
    </div>
