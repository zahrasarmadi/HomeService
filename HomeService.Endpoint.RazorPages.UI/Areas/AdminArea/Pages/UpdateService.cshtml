@page
@model HomeService.Endpoint.RazorPages.UI.Areas.AdminArea.Pages.UpdateServiceModel
@{
}

<div class="col-xxl">
    <div class="card mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <small class="text-muted float-end primary-font">ویرایش‌</small>
        </div>
        <div class="card-body">
            <form method="post" asp-page-handler="Update">
                <div class="row mb-3">
                    <input hidden asp-for="@Model.ServiceUpdate.Id" value="@Model.Service.Id" />
                    <label class="col-sm-2 col-form-label" asp-for="@Model.ServiceUpdate.Name">نام</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="@Model.ServiceUpdate.Name">
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="@Model.ServiceUpdate.Price">قیمت</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" asp-for="@Model.ServiceUpdate.Price">
                    </div>
                <div class="row justify-content-end">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">ارسال</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>