@page
@using HomeService.Domain.Core.Enums
@model HomeService.Endpoint.RazorPages.UI.Areas.AdminArea.Pages.RegisterModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "‌افزودن کاربر جدید | آیدو";
    ViewData["Register"] = "active open";
    ViewData["PageTitle"] = "افزودن ادمین جدید";
}


<div class="card">
    <div class="card-body">
        <div class="container d-flex align-items-center justify-content-center">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success text-center col-lg-6" role="alert">
                <h6 class="alert-heading mb-1">ادمین جدید در سیستم ثبت شد!</h6>
            </div>
        }
        </div>
        <div class="d-flex align-items-center justify-content-center">
           
            <form class="w-px-400 border rounded p-3 p-md-5" method="post">
                <h3 class="mb-4">افزودن ادمین</h3>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.AccountRegister.FirstName">نام</label>
                    <input type="text" asp-for="@Model.AccountRegister.FirstName" class="form-control text-start" dir="ltr">
                    <span asp-validation-for="@Model.AccountRegister.FirstName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.AccountRegister.LastName">نام خانوادگی</label>
                    <input type="text" asp-for="@Model.AccountRegister.LastName" class="form-control text-start" dir="ltr">
                    <span asp-validation-for="@Model.AccountRegister.LastName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.AccountRegister.Gender" class="form-label">جنسیت</label>
                    <select type="text" asp-for="@Model.AccountRegister.Gender" class="form-control text-start" dir="ltr">
                        <option value="@GenderEnum.Female">خانوم</option>
                        <option value="@GenderEnum.Male">آقا</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.AccountRegister.Email" class="form-label">ایمیل</label>
                    <input type="text" asp-for="@Model.AccountRegister.Email" class="form-control text-start" dir="ltr">
                    <span asp-validation-for="@Model.AccountRegister.Email" class="text-danger"></span>
                </div>

                <div class="mb-3 form-password-toggle">
                    <label asp-for="@Model.AccountRegister.Password" class="form-label">رمز عبور</label>
                    <div class="input-group input-group-merge">
                        <input type="password" asp-for="@Model.AccountRegister.Password" class="form-control text-start" dir="ltr" aria-describedby="form-alignment-password2">
                        <span asp-validation-for="@Model.AccountRegister.Password" class="text-danger"></span>
                        <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>

                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">ثبت</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}