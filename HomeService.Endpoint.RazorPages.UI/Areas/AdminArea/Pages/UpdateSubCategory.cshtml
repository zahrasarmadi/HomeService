@page
@model HomeService.Endpoint.RazorPages.UI.Areas.AdminArea.Pages.UpdateSubCategoryModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "  ویرایش دسته بندی فرعی سرویس ها | آیدو";
    ViewData["PageTitle"] = " ویرایش دسته بندی فرعی";
}

<div class="col-xxl">
    <div class="card mb-4">
        <div class="card-body">
            <form method="post" asp-page-handler="Update" enctype="multipart/form-data">

                <input hidden asp-for="@Model.ServiceSubCategoryUpdate.Id" value="@Model.ServiceSubCategoryUpdate.Id" />
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="@Model.ServiceSubCategoryUpdate.CategoryName">نام دسته بندی</label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="@Model.ServiceSubCategoryUpdate.CategoryName">
                        <span asp-validation-for="@Model.ServiceSubCategoryUpdate.CategoryName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">انتخاب دسته بندی سرویس</label>
                    <div class="col-sm-10">
                        <select id="select2Basic" asp-for="@Model.ServiceSubCategoryUpdate.ServiceCategoryId" class="select2 form-select form-select-lg" data-allow-clear="true">
                            @foreach (var category in Model.CategoryNames)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="@Model.Image">آپلود عکس</label>
                    <div class="col-sm-10">
                        <input type="file" class="form-control" asp-for="@Model.Image">
                        <span asp-validation-for="@Model.Image" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="@Model.Image">عکس</label>
                    <div class="col-sm-10">
                        @if (Model.ServiceSubCategoryUpdate.Image == string.Empty || Model.ServiceSubCategoryUpdate.Image == null)
                        {
                        <img src="~/assets/img/none.png" class="img-fluid rounded" />
                        }
                        else
                        {
                        <img src="@Model.ServiceSubCategoryUpdate.Image" class="img-fluid rounded" alt="" />
                        }
                    </div>
                </div>

                <div class="row justify-content-end">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">ارسال</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />
}