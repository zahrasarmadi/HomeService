@page
@model HomeService.Endpoint.RazorPages.UI.Areas.AdminArea.Pages.UpdateCategoryModel
@{
    Layout = "_AdminLayout";
}
<div class="col-xxl">
    <div class="card mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <small class="text-muted float-end primary-font">ویرایش‌</small>
        </div>
        <div class="card-body">
            <form method="post" asp-page-handler="Update" enctype="multipart/form-data">
                <div class="row mb-3">
                    <input hidden asp-for="@Model.ServiceCategoryUpdate.Id" value="@Model.ServiceCategory.Id" />
                    <label class="col-sm-2 col-form-label" asp-for="@Model.ServiceCategoryUpdate.Name">نام</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="@Model.ServiceCategoryUpdate.Name">
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="@Model.Image">عکس</label>
                    <div class="col-sm-10">
                        <input type="file" class="form-control" asp-for="@Model.Image">
                    </div>
                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">ارسال</button>
                        </div>
                    </div>
            </form>
        </div>
    </div>
</div>