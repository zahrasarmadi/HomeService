@page
@using HomeService.Domain.Core.Contracts.AppServices
@model IndexModel
@inject ICommentAppServices CommentAppServices;
@inject IOrderAppServices OrderAppServices;
@inject IExpertAppServices ExpertAppServices;
@inject ICustomerAppServices CustomerAppServices;

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "داشبورد | آیدو";
    ViewData["Dashboard"] = " active open";
    ViewData["PageTitle"] = "داشبورد";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row g-4 mb-4">
        <div class="col-sm-6 col-xl-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-start justify-content-between">
                        <div class="content-left">
                            <span class="secondary-font fw-medium">درخواست</span>
                            <div class="d-flex align-items-baseline mt-2">
                                <h4 class="mb-0 me-2">
                                    @await OrderAppServices.OrderCount(default)
                                </h4>
                            </div>
                            <small>مجموع درخواست‌ها</small>
                        </div>
                        <span class="badge bg-label-primary rounded p-2">
                            <i class="bx bx-spreadsheet bx-sm"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-start justify-content-between">
                        <div class="content-left">
                            <span class="secondary-font fw-medium">کامنت</span>
                            <div class="d-flex align-items-baseline mt-2">
                                <h4 class="mb-0 me-2">
                                    @await CommentAppServices.CommentCount(default)
                                </h4>
                            </div>
                            <small>مجموع کامنت‌ها</small>
                        </div>
                        <span class="badge bg-label-danger rounded p-2">
                            <i class="bx bx-comment-detail bx-sm"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-start justify-content-between">
                        <div class="content-left">
                            <span class="secondary-font fw-medium">متخصص</span>
                            <div class="d-flex align-items-baseline mt-2">
                                <h4 class="mb-0 me-2">
                                    @await ExpertAppServices.ExpertCount(default)
                                </h4>
                            </div>
                            <small>مجموع متخصصین</small>
                        </div>
                        <span class="badge bg-label-success rounded p-2">
                            <i class="bx bx-group bx-sm"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-start justify-content-between">
                        <div class="content-left">
                            <span class="secondary-font fw-medium">مشتری</span>
                            <div class="d-flex align-items-baseline mt-2">
                                <h4 class="mb-0 me-2">
                                    @await CustomerAppServices.CustomerCount(default)
                                </h4>
                            </div>
                            <small>مجموع مشتری ها</small>
                        </div>
                        <span class="badge bg-label-warning rounded p-2">
                            <i class="bx bx-user-plus bx-sm"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>