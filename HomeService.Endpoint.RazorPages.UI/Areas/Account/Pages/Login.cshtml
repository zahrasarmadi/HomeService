@page
@model LoginModel
@{
    Layout = "_Layout";
}

<section class="gray">
    <div class="container">
        <div class="row align-items-start justify-content-center">
            <div class="col-xl-5 col-lg-8 col-md-12">

                <div class="signup-screen-wrap">
                    <div class="signup-screen-single">
                        <div class="text-center mb-4">
                            <h4 class="m-0 ft-medium">ورود به حساب</h4>
                        </div>

                        <form class="submit-form" method="post">
                            <div class="form-group">
                                <label asp-for="@Model.AccountLogin.Email" class="mb-1">ایمیل</label>
                                <input type="text" asp-for="@Model.AccountLogin.Email" class="form-control rounded">
                                <span asp-validation-for="@Model.AccountLogin.Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="@Model.AccountLogin.Password" class="mb-1">رمز عبور</label>
                                <input type="password" asp-for="@Model.AccountLogin.Password" class="form-control rounded">
                                <span asp-validation-for="@Model.AccountLogin.Password" class="text-danger"></span>
                            </div>

                            <div asp-validation-summary="ModelOnly" class="text-danger p-3" role="alert"></div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-md full-width theme-bg text-light rounded ft-medium">ورود</button>
                            </div>


                            <div class="form-group text-center mt-4 mb-0">
                                <p class="mb-0">آیا تا به حال ثبت نام نکرده اید؟ <a asp-page="./Register" class="ft-medium text-success">ثبت نام</a></p>
                            </div>


                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />
}