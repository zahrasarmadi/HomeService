@page
@model LoginModel
@{
	Layout = "_Layout";
}

<section class="gray">
	<div class="container">
		<div class="row align-items-start justify-content-center">
			<div class="col-xl-5 col-lg-8 col-md-12">

				<div class="signup-screen-wrap">
					<div class="signup-screen-single">
						<div class="text-center mb-4">
							<h4 class="m-0 ft-medium">ورود به حساب</h4>
						</div>

						<form class="submit-form" method="post" asp-page-handler="OnPostAsync">

							<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
							<div class="form-group">
								<label asp-for="Input.Email" class="mb-1">ایمیل</label>
								<input type="text" asp-for="Input.Email" class="form-control rounded" placeholder="ایمیل*">
							</div>

							<div class="form-group">
								<label asp-for="Input.Password" class="mb-1">رمز عبور</label>
								<input type="password" asp-for="Input.Password" class="form-control rounded" placeholder="رمز عبور*">
							</div>

							<div class="form-group">
								<div class="d-flex align-items-center justify-content-between">
									<div class="flex-1">
										<input id="dd" class="checkbox-custom" name="dd" type="checkbox" checked>
										<label for="dd" class="checkbox-custom-label">مرا به خاطر بسپار</label>
									</div>
									<div class="eltio_k2">
										<a href="#" class="theme-cl">فراموشی رمز عبور</a>
									</div>
								</div>
							</div>

							<div class="form-group">
								<button type="submit" class="btn btn-md full-width theme-bg text-light rounded ft-medium">ورود</button>
							</div>

							<div class="form-group text-center mt-4 mb-0">
								<p class="mb-0">آیا تا به حال ثبت نام نکرده اید؟ <a asp-page="./Register" class="ft-medium text-success">ثبت نام</a></p>
							</div>

						</form>
					</div>
				</div>

			</div>
		</div>
	</div>
</section>