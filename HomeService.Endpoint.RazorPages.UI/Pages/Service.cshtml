@page
@model HomeService.Endpoint.RazorPages.UI.Pages.ServiceModel
@{
}
<section class="gray py-5">
    <div class="container">
        <div class="row">
            <!-- Item Wrap Start -->
            <div class="col-xl-12 col-lg-8 col-md-12 col-sm-12">

                <!-- row -->
                <div class="row justify-content-center g-2">
                    @foreach (var item in Model.Services)
                    {
                        <div class="col-xl-4 col-lg-3 col-md-3 col-sm-6">
                            <div class="grouping-listings-single">
                                <div class="vrt-list-wrap">
                                    <div class="vrt-list-wrap-head text-center">
                                        <div>
                                            <h4>@item.Name</h4>
                                        </div>
                                    </div>
                                    <div class="p-3">
                                        <a asp-page="AddOrder" asp-area="" asp-route-id="@item.Id" class="btn btn-md  theme-bg text-light rounded ft-medium">ثبت درخواست</a> <!-- تگ <a> در زیر متن کارت قرار می‌گیرد -->

                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <!-- row -->

            </div>

        </div>
    </div>
</section>